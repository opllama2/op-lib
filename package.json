{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna exec --parallel -- babel --root-mode upward src -d lib --delete-dir-on-start --ignore **/*.spec.js",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "cz-lerna-changelog": "^2.0.3",
    "lerna": "^3.22.1",
    "semantic-release": "^17.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "dependencies": {
    "commitizen": "^4.1.2",
    "lerna-semantic-release": "^9.1.0",
    "validate-commit-msg": "^2.14.0"
  }
}
